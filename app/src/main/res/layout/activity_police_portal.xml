<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutSplash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16sp"
        android:background="#ddffffff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:src="@drawable/hp_icon"
                        android:layout_margin="20sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HARYANA POLICE TRAFFIC E-CHALLAN SYSTEM"
                        android:layout_marginTop="20sp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#9f2408"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="8sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="10sp"
                    android:background="@drawable/form_button_background">

                    <TextView
                        android:id="@+id/textViewPolicePortalRegisterChallan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:drawableTop="@drawable/ic_person_black_24dp"
                        android:text="Register Challan"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10sp"
                    android:background="@drawable/form_button_background"
                    android:elevation="8sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp">

                    <TextView
                        android:id="@+id/textViewPolicePortalPendingChallan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:drawableTop="@drawable/ic_receipt_black_24dp"
                        android:text="Pending Challan"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10sp"
                    android:background="@drawable/form_button_background"
                    android:elevation="8sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp">

                    <TextView
                        android:id="@+id/textViewPolicePortalChallanHistory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10sp"
                        android:text="Challan History"
                        android:textSize="22sp"
                        android:drawableTop="@drawable/ic_history_black_24dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
