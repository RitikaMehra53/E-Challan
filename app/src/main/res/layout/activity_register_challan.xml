<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddffffff"
        android:orientation="vertical"
        android:padding="16sp">

        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_margin="20sp"
                        android:src="@drawable/hp_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:fontFamily="sans-serif"
                        android:text="HARYANA POLICE TRAFFIC E-CHALLAN SYSTEM"
                        android:textAlignment="center"
                        android:textColor="#9f2408"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="REGISTER CHALLAN"
                    android:textAlignment="center"
                    android:textColor="#c62b5a"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"/>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/textViewDatePickerChallanDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Challan Date: "
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <DatePicker
                        android:id="@+id/datePickerChallanDate"
                        android:layout_width="0dp"
                        android:layout_height="100sp"
                        android:layout_weight="2"
                        android:calendarViewShown="true"
                        android:clickable="true" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/textViewTimePickerChallanTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Challan Time: "
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TimePicker
                        android:id="@+id/timePickerChallanTime"
                        android:layout_width="0dp"
                        android:layout_height="100sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2" />

                </android.support.v7.widget.LinearLayoutCompat>


                <EditText
                    android:id="@+id/editTextRegisterChallanName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/editTextRegisterChallanEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/editTextRegisterChallanPhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="Phone No."
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/editTextRegisterChallanVehicleNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="Vehicle Number"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/editTextRegisterChallanRCNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="RC Number"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/editTextRegisterChallanPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="Challan Place"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />




                <Button
                    android:id="@+id/buttonRegisterChallanSubmitChallan"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/form_button_background"
                    android:fontFamily="sans-serif"
                    android:text="Submit Challan"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>














